<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Category Tabs -->
    <style name="CategoryTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:paddingTop">@dimen/tab_title_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/tab_title_padding_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Categories -->
    <style name="CategoryWrapper">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="android:background">@drawable/category_bg</item>
    </style>

    <style name="CategoryContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CategoryIcon" parent="CategoryContent">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
    <style name="CategoryTitle" parent="CategoryContent">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="layout_constraintHorizontal_chainStyle">packed</item>
    </style>
    <style name="CategoryCount" parent="CategoryTitle">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">(0)</item>
    </style>
</resources>
